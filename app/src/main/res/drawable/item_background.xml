<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#E0E0E0" /> <!-- Màu nền khi nhấn -->
            <corners android:radius="8dp" /> <!-- Đường viền bo tròn -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Màu nền bình thường -->
            <corners android:radius="8dp" /> <!-- Đường viền bo tròn -->
        </shape>
    </item>
</selector>
