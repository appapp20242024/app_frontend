<!-- res/drawable/textview_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của TextView -->
    <solid android:color="#FFFFFF" />

    <!-- Độ dày của viền -->
    <stroke
        android:width="2dp"
        android:color="#FF6200EE" />

    <!-- Bo tròn các góc -->
    <corners android:radius="8dp" />

    <!-- Khoảng cách padding giữa viền và nội dung -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
