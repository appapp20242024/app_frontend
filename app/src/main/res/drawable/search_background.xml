<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền của EditText -->
    <solid android:color="#FFFFFF"/> <!-- Màu trắng cho nền -->

    <!-- Đường viền -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC"/> <!-- Màu xám nhạt cho đường viền -->

    <!-- Góc bo tròn -->
    <corners android:radius="16dp"/> <!-- Bán kính bo tròn -->

    <!-- Đổ bóng (tùy chọn) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/> <!-- Padding bên trong -->
</shape>
